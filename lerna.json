{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
    "packages": [
        "packages/*"
    ],
    "version": "1.0.0",
    "command": {
        "version": {
            "allowBranch": [
                "main"
            ],
            "ignoreChanges": [
                "**/*.md"
       ],
      "commitHooks": false,
      "ignoreScripts": true,
      "loglevel": "verbose"
    }
  }
}
