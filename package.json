{
    "name": "typescript-monorepo-template",
    "description": "A template monorepo with TypeScript",
    "version": "1.0.0",
    "private": true,
    "engines": {
        "node": ">= 22",
        "npm": ">= 10"
    },
    "keywords": [],
    "author": "yoavain",
    "license": "ISC",
    "scripts": {
        "husky-install": "git config --get core.hookspath || husky",
        "prepare": "npm run husky-install",
        "install": "npm run bootstrap",
        "postinstall": "lerna run build && npx fix-lockfile-integrity",
        "bootstrap": "lerna bootstrap --ignore-scripts --force-local --no-ci",
        "build": "lerna run --stream build",
        "test": "lerna run --stream test",
        "unit_test": "lerna run --stream unit_test",
        "integration_test": "lerna run --stream integration_test",
        "eslint": "lerna run --stream eslint",
        "eslint-fix": "lerna run --stream eslint-fix",
        "type-check": "lerna run --stream type-check",
        "index-generator": "lerna run --stream index-generator",
        "update-versions": "node -r ts-node/register/transpile-only scripts/lernaVersion.ts",
        "pre-commit": "git diff HEAD --exit-code --stat -- lerna.json > nul || npm run update-versions && npm install --prefer-offline && git add \"**/package*.json\"",
        "postpre-commit": "git diff HEAD --exit-code --stat -- *.ts > nul || lerna run --stream --concurrency 1 pre-commit",
        "fix-lock-files": "npx fix-lockfile-integrity",
        "update:root": "npx npm-check-updates -u -t minor",
        "update:packages": "lerna exec \"npx npm-check-updates -u -t minor\" --stream",
        "update:all": "npm run update:root && npm run update:packages",
        "graph-raw": "npx lerna-dependency-graph --graphvizCommand dot --outputPath docs/graph.txt"
    },
    "devDependencies": {
        "@eslint/compat": "1.3.2",
        "@eslint/eslintrc": "3.3.1",
        "@eslint/js": "9.33.0",
        "@tsconfig/node22": "22.0.1",
        "@types/node": "22.17.2",
        "@types/validate-npm-package-name": "4.0.2",
        "@typescript-eslint/eslint-plugin": "8.39.1",
        "@typescript-eslint/parser": "8.39.1",
        "eslint": "9.33.0",
        "eslint-import-resolver-typescript": "4.4.4",
        "eslint-plugin-import": "2.32.0",
        "eslint-plugin-jest": "29.0.1",
        "eslint-plugin-n": "17.21.3",
        "eslint-plugin-security": "3.0.1",
        "globals": "16.3.0",
        "husky": "9.1.7",
        "lerna": "6.6.2",
        "nx": "21.4.0",
        "ts-node": "10.9.2",
        "typescript": "5.9.2",
        "validate-npm-package-name": "6.0.2",
        "yargs": "17.7.2"
    }
}